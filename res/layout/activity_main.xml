<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ecode.YouTubePro.MainActivity" >

    <include
        android:id="@+id/top_home"
        layout="@layout/top_main" />

    <include
        android:id="@+id/top_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_home"
        layout="@layout/top_detail_list"
        android:visibility="gone" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_detail"
        layout="@layout/theme_title_viewpager" />

</RelativeLayout>